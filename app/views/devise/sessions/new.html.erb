<div class="login_page_wrapper">
    <h2>Sign in</h2>
    <div class="login_card">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div>
              <% if resource.errors.get(:email) %>
                  <span class="error"><%= resource.errors.get(:email)[0] %></span>
              <%end%>
              <%= f.email_field :email, :placeholder => "Email", :autofocus => true %>
          </div>

          <div>
              <% if resource.errors.get(:password) %>
                  <span class="error"><%= resource.errors.get(:password)[0] %></span>
              <%end%>
              <%= f.password_field :password, :placeholder => "Password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div>
                <%= f.check_box :remember_me %>
                <span>remember_me</span>
            </div>
          <% end -%>

          <div>
              <%= f.submit "Sign in", :class => 'btn btn-info' %>
              <%= render "devise/shared/links" %>
          </div>
        <% end %>
    </div>
</div>
