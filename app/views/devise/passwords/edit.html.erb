<div class="login_page_wrapper">
    <h2>Change your password</h2>
    <div class="login_card">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

          <%= f.hidden_field :reset_password_token %>

          <div>
              <% if resource.errors.get(:password) %>
                  <span class="error"><%= resource.errors.get(:password)[0] %></span>
              <%end%>
            <%= f.password_field :password, :placeholder => "New password", :autofocus => true %>
          </div>

          <div>
              <% if resource.errors.get(:password_confirmation) %>
                  <span class="error"><%= resource.errors.get(:password_confirmation)[0] %></span>
              <%end%>
            <%= f.password_field :password_confirmation, :placeholder => "Confirm new password" %>
          </div>

          <div>
              <%= f.submit "Change my password", :class => 'btn btn-info' %>
              <%= render "devise/shared/links" %> %>
          </div>
        <% end %>

    </div>
</div>